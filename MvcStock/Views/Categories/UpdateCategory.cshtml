@model MvcStock.Models.Entity.TblCategory

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post">
    @Html.HiddenFor(c => c.CategoryID)
    <label>Kategori Adı</label>
    @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Kategoriyi Güncelle</button>
</form>
